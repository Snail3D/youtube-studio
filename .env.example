# YouTube Studio - Environment Configuration
# Copy this file to ~/.clawd-youtube/config.env and fill in your values

# ============================================================
# YouTube API Credentials
# ============================================================

# Get from Google Cloud Console (https://console.cloud.google.com/)
YOUTUBE_API_KEY=your_api_key_here

# OAuth 2.0 Credentials (from credentials.json)
YOUTUBE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8888/oauth2callback

# ============================================================
# Channel Settings
# ============================================================

# Your YouTube channel ID (format: UCxxxxxxxxxx)
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxx

# Your channel name (display purposes)
YOUTUBE_CHANNEL_NAME=Your Channel Name

# Your channel email
YOUTUBE_CHANNEL_EMAIL=your.email@gmail.com

# ============================================================
# AI Model Settings (for suggestions & replies)
# ============================================================

# OpenRouter API key for Claude
AI_API_KEY=your_openrouter_api_key

# AI model to use
AI_MODEL=openrouter/anthropic/claude-haiku-4.5

# Temperature for AI generation (0.0-1.0, higher = more creative)
AI_TEMPERATURE=0.7

# Max tokens for AI responses
AI_MAX_TOKENS=2000

# ============================================================
# Rate Limiting & Quota
# ============================================================

# Daily API quota (YouTube default: 1,000,000)
API_QUOTA_PER_DAY=1000000

# Batch size for processing requests
BATCH_SIZE=50

# Max retries for failed API requests
MAX_RETRIES=3

# Initial retry delay in milliseconds
RETRY_DELAY_MS=1000

# ============================================================
# Upload Settings
# ============================================================

# Default privacy status (public, unlisted, private)
DEFAULT_PRIVACY=unlisted

# Default video category ID
DEFAULT_CATEGORY=22

# Maximum video file size in MB (YouTube: 256GB, we set 5GB as practical limit)
MAX_VIDEO_SIZE_MB=5120

# Supported video formats (comma-separated)
SUPPORTED_FORMATS=mp4,mov,avi,mkv,flv,wmv,webm

# ============================================================
# Content Settings
# ============================================================

# Default channel niche
CHANNEL_NICHE=devotional

# Number of video ideas to generate
IDEAS_COUNT=5

# Number of comment suggestions to generate
REPLY_SUGGESTIONS=3

# Number of days to look back for analytics
STATS_DAYS=30

# ============================================================
# Logging
# ============================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log directory
LOG_DIR=~/.clawd-youtube/logs

# Enable file logging
FILE_LOGGING=true

# Enable console logging
CONSOLE_LOGGING=true

# Log file retention days (0 = keep all)
LOG_RETENTION_DAYS=30

# ============================================================
# Feature Flags
# ============================================================

# Enable automatic token refresh
AUTO_REFRESH_TOKENS=true

# Enable quota tracking
TRACK_QUOTA=true

# Enable circuit breaker for rate limiting
USE_CIRCUIT_BREAKER=true

# Enable caching of API responses
USE_CACHE=true

# Cache duration in seconds
CACHE_DURATION=3600

# ============================================================
# Notifications
# ============================================================

# Alert when quota usage exceeds this percentage
QUOTA_WARNING_THRESHOLD=80

# Alert when quota usage exceeds this percentage
QUOTA_CRITICAL_THRESHOLD=95

# ============================================================
# Network Settings
# ============================================================

# Network timeout in milliseconds
NETWORK_TIMEOUT_MS=30000

# Proxy URL (optional)
# PROXY_URL=http://proxy.example.com:8080

# ============================================================
# Advanced Settings
# ============================================================

# Enable debug mode (very verbose logging)
DEBUG_MODE=false

# Enable dry-run mode by default (preview without changes)
DRY_RUN_MODE=false

# Enable analytics tracking
ANALYTICS_ENABLED=true

# Custom user agent
USER_AGENT=youtube-studio/1.0 (+https://github.com/yourusername/youtube-studio)
